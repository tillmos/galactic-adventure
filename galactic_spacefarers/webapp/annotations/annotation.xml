<edmx:Edmx xmlns:edmx="http://docs.oasis-open.org/odata/ns/edmx" Version="4.0">
    <edmx:Reference Uri="https://sap.github.io/odata-vocabularies/vocabularies/Common.xml">
        <edmx:Include Namespace="com.sap.vocabularies.Common.v1" Alias="Common"/>
    </edmx:Reference>
    <edmx:Reference Uri="https://sap.github.io/odata-vocabularies/vocabularies/UI.xml">
        <edmx:Include Namespace="com.sap.vocabularies.UI.v1" Alias="UI"/>
    </edmx:Reference>
    <edmx:Reference Uri="https://sap.github.io/odata-vocabularies/vocabularies/Communication.xml">
        <edmx:Include Namespace="com.sap.vocabularies.Communication.v1" Alias="Communication"/>
    </edmx:Reference>
    <edmx:Reference Uri="/odata/v4/galactic/$metadata">
        <edmx:Include Namespace="GalacticService"/>
    </edmx:Reference>
    <edmx:DataServices>
        <Schema xmlns="http://docs.oasis-open.org/odata/ns/edm" Namespace="local">
        
        <Annotations Target="GalacticService.Spacefarers">
        <Annotation Term="UI.Editable" Bool="true"/>
            <Annotation Term="UI.LineItem" > 
            <Collection>
                <Record Type="UI.DataField"  >
                 <PropertyValue Property="Label" String="Spacefarers" />
                <PropertyValue Property="Value" Path="name" />
                </Record>
                 <Record Type="UI.DataField"  >
                 <PropertyValue Property="Label" String="Stardust collection" />
                <PropertyValue Property="Value" Path="stardustCollection" />
                </Record>
                   <Record Type="UI.DataField"  >
                 <PropertyValue Property="Label" String="Spacesuit color" />
                <PropertyValue Property="Value" Path="spacesuitColor" />
                </Record>
            </Collection>
            </Annotation>
   <Annotation Term="UI.FieldGroup" Qualifier="EditGroup">
    <Record Type="UI.FieldGroupType">
        <PropertyValue Property="Label" String="Spacefarer Details"/>
        <PropertyValue Property="Data">
            <Collection>
                <Record Type="UI.DataField" >
                    <PropertyValue Property="Value" Path="name" Editable="true"/>
                </Record>
                <Record Type="UI.DataField">
                    <PropertyValue Property="Value" Path="email"/>
                </Record>
                <Record Type="UI.DataField">
                    <PropertyValue Property="Value" Path="stardustCollection"/>
                </Record>
                <Record Type="UI.DataField">
                    <PropertyValue Property="Value" Path="spacesuitColor"/>
                </Record>
                <Record Type="UI.DataField">
                    <PropertyValue Property="Value" Path="originPlanet"/>
                </Record>
                <Record Type="UI.DataField">
                    <PropertyValue Property="Value" Path="department/name"/>
                </Record>
                <Record Type="UI.DataField">
                    <PropertyValue Property="Value" Path="position/title"/>
                </Record>
            </Collection>
        </PropertyValue>
    </Record>
</Annotation>

                <!-- Object Page Facet pointing to the FieldGroup -->
                <Annotation Term="UI.Facets">
                    <Collection>
                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Label" String="Spacefarer Details"/>
                            <PropertyValue Property="Target" AnnotationPath="@UI.FieldGroup#EditGroup"/>
                        </Record>
                    </Collection>
                </Annotation>
            </Annotations>

        </Schema>
    </edmx:DataServices>
</edmx:Edmx>